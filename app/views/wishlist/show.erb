<div class="nav"> 
  <div class="left">
    <h3>Eleplant - Never Forget Your Plants Again! </h3> 
  </div>

  <div class="right">
    <a href="/plants">My Plants</a> | <a href="/logout">Logout</a>
  </div>
</div>

<div class="body"> 
  <h3><%= @current_user.username %>'s wishlist:</h3>
  <% if @current_user.wishlist.empty? %>
    <p> You don't have any plants in your wishlist yet. <a href="/wishlist/new">Add one!</a> </p>
  <% else %>
    <p>Choose a plant to see more information!</p>
    <ul>
      <% @current_user.wishlist.each do |item| %>
        <li><a href="/wishlist/<%= item.id%>"> <%= item.item_name %></a></li>
      <% end %>    
    </ul> <br>
    <button type="submit" onclick="window.location.href = '/wishlist/new';">Add a Plant</button>
  <% end %>
</div>

<div class="sidebar"> 
  <img src="../images/plants.jpg">
</div>
