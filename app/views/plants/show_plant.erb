<div class="nav"> 
  <div class="left">
    <h3>Eleplant - Never Forget Your Plants Again! </h3> 
  </div>

  <div class="right">
    <a href="/plants">My Plants</a> | <a href="/wishlist">My Wishlist</a> | <a href="/logout">Logout</a>
  </div>
</div>

<div class="body"> 
    <h4><%= @current_user.username %>'s Plants</h4>
    <p>Choose a plant to see more information!</p>
    <ul>
      <% @current_user.plants.each do |plant| %>
        <li><a href="/plants/<%= plant.id%>"> <%= plant.name %></a></li>
      <% end %>    
    </ul> <br>
    <button type="submit" onclick="window.location.href = '/plants/new';">Add a Plant</button>
</div>

<div class="sidebar"> 
    <h3><%= @plant.name %></h3>
    <p>Light Requirements: <%= @plant.light %></p>
    <p>Water Requirements: <%= @plant.water %></p>
    <p>Date Last Watered: <%= @plant.last_date %></p> 

  <div class="button-left">
    <form method="post" action="/plants/<%=@plant.id%>">
      <input id="hidden" type="hidden" name="_method" value="DELETE">
      <button type="submit">Delete Plant</button>
    </form>
  </div>

  <div class="button-right">
    <button type="submit" onclick="window.location.href = '/plants/<%=@plant.id%>/edit';">Edit Plant</button>
  </div>
</div>