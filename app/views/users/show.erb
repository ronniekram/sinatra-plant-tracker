<div class="body"> 
  <h3><%= @current_user.username %>'s plants:</h3>
  <% if @current_user.plants.empty? %>
    <p> You don't have any plants yet. <a href="/plants/new">Add one!</a> </p>
  <% else %>
    <p>Choose a plant to see more information!</p>
    <ul>
      <% @current_user.plants.each do |plant| %>
        <li> &#9788; <a href="/plants/<%= plant.id%>"> <%= plant.name %></a></li>
      <% end %>    
    </ul> <br>
    <button type="submit" onclick="window.location.href = '/plants/new';">Add a Plant</button>
  <% end %>
</div>

<div class="sidebar"> 
  <img src="../images/plants.jpg">
</div>